{
    "plugins": [
        "./node_modules/prettier-plugin-blade/",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "tabWidth": 2,
                "singleQuote": true
            }
        }
    ]
}